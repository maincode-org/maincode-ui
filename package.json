{
  "name": "maincode-ui",
  "version": "1.1.2",
  "description": "A collection of freely available React.js UI components by Maincode!",
  "author": "MarkKragerup",
  "license": "BSD3",
  "repository": "maincode-org/maincode-ui",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "styles": [
    "styles/generics.css",
    "styles/theme.css"
  ],
  "files": [
    "dist",
    "styles"
  ],
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "fix": "npx prettier --write . && npx eslint \"src/**/*.{ts,tsx}\" --fix",
    "dev-init": "husky install",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd documentation-app && npm install && npm run build",
    "deploy": "gh-pages -d documentation-app/build"
  },
  "peerDependencies": {
    "@ionic/react": "^5.7.0",
    "@ionic/react-router": "^5.7.0",
    "@tippyjs/react": "^4.2.5",
    "html-react-parser": "^1.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-live": "2.2.3",
    "react-router-dom": "^5.3.0",
    "prism-react-renderer": "^1.2.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.38",
    "@types/react": "^16.9.27",
    "@types/react-dom": "^16.9.7",
    "@types/react-router-dom": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^2.34.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^26.6.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "husky": "^7.0.2",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.0",
    "react-scripts": "^3.4.1",
    "typescript": "^4.4.2"
  }
}
